{
	"compilerOptions": {
		"target": "esnext",
		"module": "es2020",
		"moduleResolution": "node",
		"types": [ "node", "jest" ],
		"allowJs": true,
		"noEmit": true,
		"strict": false,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"sourceMap": true, 
		"jsx": "react",
		"typeRoots": ["./node_modules/@types", "./src/@types"],
		"baseUrl": "src/client/",
		"skipLibCheck": true,
		"paths": {
			"app/*": ["app/app/*"],
			"data/*": ["app/data/*"],
			"form/*": ["app/form/*"],
			"kodeverk/*": ["app/kodeverk/*"],
			"sharedComponents/*": ["app/sharedComponents/*"],
			"avdelingsleder/*": ["app/avdelingsleder/*"],
			"saksbehandler/*": ["app/saksbehandler/*"],
			"utils/*": ["app/utils/*"],
			"testHelpers/*": ["testHelpers/*"],
		  }
	},
	"include": [
		"src"
	],
}